.gitignore

ROOT = $(TUP_CWD)

CC = cc
CXX = c++

CFLAGS = -g -O0 --std=c11 -pedantic-errors -Wvla
CXXFLAGS = --std=c++11

ifdef CXX_MODE
!cc = |> $(CXX) -x c++ -c %f -o %o $(CFLAGS) $(CXXFLAGS) |> %B.o
!ldcc = |> $(CXX) -o %o %f $(LDFLAGS) |>
else
!cc = |> $(CC) -c %f -o %o $(CFLAGS) |> %B.o
!ldcc = |> $(CC) -o %o %f $(LDFLAGS) |>
endif

!cxx = |> $(CXX) -c %f -o %o $(CFLAGS) $(CXXFLAGS) |> %B.o
!ldcxx = |> $(CXX) -o %o %f $(LDFLAGS) |>

!ar = |> ar crs %o %f |>
